    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarSale[0].Customers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarSale[0].SalePersons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarSale[0].AgreedAmount)
            </th>
