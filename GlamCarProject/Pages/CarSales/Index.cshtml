        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customers.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalePersons.SalePersonId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgreedAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CarSaleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CarSaleId">Details</a> |
